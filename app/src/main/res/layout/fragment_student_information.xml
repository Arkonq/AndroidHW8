<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_change_data_activity_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/student_info_image_desc" />

    <TextView
        android:id="@+id/edit_text_change_data_activity_first_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/student_info_name_surname_hint"/>

    <TextView
        android:id="@+id/edit_text_change_data_activity_last_name"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:hint="@string/student_info_details_hint"/>

</LinearLayout>